<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageTags>cache, cache-storge, cachemanager, cache-maker, in-memory-caching, dotnet, redis, dependency-injection, system-cache, cache-key, cache-manager, cache-manamgement</PackageTags>
    <RepositoryType>git</RepositoryType>
    <PackageIcon>Boba.Cache.png</PackageIcon>
    <RepositoryUrl>https://github.com/MarwanAlmaseid/Boba.Cache/tree/master/src/Boba.Cache.Memory.Microsoft.DependencyInjection</RepositoryUrl>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <Title>Boba.Cache.Memory.Microsoft.DependencyInjection</Title>
    <PackageReadmeFile>README.MD</PackageReadmeFile>
    <Description>Boba.cache is an ASP.NET Core library that simplifies cache management. It offers interfaces to handle all cache operations (get, set, remove,...), generate keys, and manage cache entries.</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\Boba.Cache.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Boba.Cache.Memory\Boba.Cache.Memory.csproj" />
    <ProjectReference Include="..\Boba.Cache.Microsoft.DependencyInjection\Boba.Cache.Microsoft.DependencyInjection.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.MD">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
